<% if @tags %>
  <h3>Tags relevantes</h3>
  <div class="cloud">
    <% tag_cloud(@tags) do |tag, c| -%>
      <span class="<%= c %>">
        <%= link_to_competition_with_context tag.name, :tag_id => tag.id %></span>
    <% end -%>
  </div>
<% end %>

<%= render "shared/activities_feed", :activities => @activities %>
<%= render "shared/addthis_toolbox" %>
