<ul class="sans-bullets bem-distribuidos">
  <!-- li>
    <span>Identificação da Empresa na Etiqueta (Automação...)</span><br />
    <%= text_area_tag "settings[automacao_empresa_na_etiqueta]", @settings["automacao_empresa_na_etiqueta"], :cols => 40, :rows => 4 -%>
  </li-->

  <fieldset class="grupo-simples">
    <legend>Site &lt;HEAD&gt;, SEO etc.</legend>
    <li>
      <%= label_tag "Description" %>
      <%= text_area_tag "settings[head_description]", @settings["head_description"], :cols => 80, :rows => 3 -%>
      <p class="dica">Evite ultrapassar 200 caracteres</p>
    </li>
    <li>
      <%= label_tag "Keywords" %>
      <%= text_area_tag "settings[head_keywords]", @settings["head_keywords"], :cols => 80, :rows => 2 -%>
      <p class="dica">Até 10 palavras separadas por vírgulas</p>
    </li>
  </fieldset>
  
  <fieldset class="grupo-simples">
    <legend>Home</legend>
    <li class="voando">
      <%= label_tag "Itens da cloud" %>
      <%= text_field_tag "settings[home_cloud_items]", @settings["home_cloud_items"], :size => 3 -%>
      <p class="dica">Use apenas números</p>
    </li>
    <li class="voando">
      <%= label_tag "Número de tópicos" %>
      <%= text_field_tag "settings[home_numero_topicos]", @settings["home_numero_topicos"], :size => 3 -%>
      <p class="dica">Use apenas números</p>
    </li>
    <li class="voando">
      <%= label_tag "Número de apoios" %>
      <%= text_field_tag "settings[home_numero_apoios]", @settings["home_numero_apoios"], :size => 3 -%>
      <p class="dica">Use apenas números</p>
    </li>
    <li class="voando">
      <%= label_tag "Número de seguidores" %>
      <%= text_field_tag "settings[home_numero_seguidores]", @settings["home_numero_seguidores"], :size => 3 -%>
      <p class="dica">Use apenas números</p>
    </li>
    <li>
      <%= label_tag "Número de comentários" %>
      <%= text_field_tag "settings[home_numero_comentarios]", @settings["home_numero_comentarios"], :size => 3 -%>
      <p class="dica">Use apenas números</p>
    </li>
  </fieldset>

  <fieldset class="grupo-simples">
    <legend>Aviso geral em todo site</legend>
    <li class="voando">
      <%= label_tag "Ligar?" %>
      <%= check_box_tag "settings[aviso_ligado]", 1, (@settings["aviso_ligado"].to_i==1) %>
      <%= observe_field "settings_aviso_ligado", 
                        :url => { :action => "update_check_box" },
                        :with => "settings[aviso_ligado]" -%>
    </li>
    <li>
      <%= label_tag "Tipo" %>
      <%= select_tag "settings[aviso_geral_tipo]", options_for_select( { "Texto simples" => "texto", 
                                                                         "Arquivo personalizado" => "arquivo" },  @settings["aviso_geral_tipo"]), :onchange => "trocarTipoAviso()" -%>
    </li>
    <li id="aviso_texto_simples" <% if @settings["aviso_geral_tipo"]!="texto"%>style="display:none"<% end -%>>
      <%= label_tag "Texto simples" %>
      <%= text_area_tag "settings[aviso_geral_texto]", @settings["aviso_geral_texto"], :cols => 80, :rows => 6 -%>
    </li>
    <li id="aviso_arquivo_personalizado" <% if @settings["aviso_geral_tipo"]!="arquivo"%>style="display:none"<% end -%>>
      <%= label_tag "Arquivo personalizado" %>
      <%= text_field_tag "settings[aviso_geral_arquivo]", @settings["aviso_geral_arquivo"], :size => 80 -%>
      <p class="dica">Path a partir de <b>/app/views/</b></p>
    </li>
  </fieldset>


  <fieldset class="grupo-simples">
    <legend>Facebook &quot;I like it&quot;</legend>
    <li class="voando">
      <%= label_tag "Ligar?" %>
      <%= check_box_tag "settings[facebook_ilikeit]", 1, (@settings["facebook_ilikeit"].to_i==1) %>
      <%= observe_field "settings_facebook_ilikeit", 
                        :url => { :action => "update_check_box" },
                        :with => "settings[facebook_ilikeit]" -%>
    </li>
    <li>
      <%= label_tag "user_id" %>
      <%= text_field_tag "settings[facebook_admins]", @settings["facebook_admins"], :size => 20 -%>
      <p class="dica">Se preciso, separe com vírgula. Preenche o campo META <b>fb:admins</b></p>
    </li>
  </fieldset>
</ul>